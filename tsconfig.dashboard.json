{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "noEmit": false
  },
  "include": ["dashboard-server.ts", "src/services/user/userService.ts"],
  "exclude": ["node_modules", "dist", "src/app/**/*", "src/services/ai/**/*", "src/services/ccip/**/*", "src/services/wallet/**/*"]
} 